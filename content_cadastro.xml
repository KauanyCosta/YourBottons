<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CadastroActivity"
    tools:showIn="@layout/activity_cadastro">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/MainLogo"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="FaÃ§a seu cadastro!"
                android:textSize="23sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCadastroNome"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_user"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:hint=" Nome"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="0" />

            <EditText
                android:id="@+id/etCadastroLogin"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_edit"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="12dp"
                android:hint=" Login"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="0" />

            <EditText
                android:id="@+id/etCadastroEmail"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_email"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:hint=" E-mail"/>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="0" />


            <EditText
                android:id="@+id/etCadastroSenha"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_password"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:hint=" Senha"
                android:inputType="textPassword"/>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="0" />


            <EditText
                android:id="@+id/etCadastroCPF"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_user"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:hint=" CPF"/>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="0" />

            <Button
                android:id="@+id/bCadastroCadastrar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Cadastrar"
                android:background="@drawable/background_button1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0" />

            <Button
                android:id="@+id/bCadastroCancelar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Cancelar"
                android:background="@drawable/background_button1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
