<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BottomExpandidoActivity"
    tools:showIn="@layout/activity_botton_expandido">

    <ImageView
        android:id="@+id/ivBottomEImagem"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvBottomETitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvBottomEValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="R$Valor,00"
        android:textSize="18sp"
        android:textStyle="" />

    <View
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="Descrição"/>

        <TextView
            android:id="@+id/tvBottomEDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Quantidade:"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etQuantidade"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:hint="   0000"
            android:inputType="number"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="0" />

    <Button
            android:id="@+id/bBottomExpandidoComprar"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/background_button1"
            android:padding="10dp"
            android:text="Efetuar compra"
            android:textSize="15sp"
            android:textStyle="bold" />

</LinearLayout>