<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yourbottons">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".InformacoesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MinhasComprasActivity"
            android:label="@string/title_activity_minhas_compras"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.TelaInicialActivity" />
        </activity>
        <activity
            android:name=".SugestaoActivity"
            android:label="@string/title_activity_sugestao"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.TelaInicialActivity" />
        </activity>
        <activity
            android:name=".BottomExpandidoActivity"
            android:label="@string/title_activity_botton_expandido"
            android:parentActivityName=".BottonsRecyclerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.BottonsRecyclerActivity" />
        </activity>
        <activity
            android:name=".PerfilActivity"
            android:label="@string/title_activity_perfil"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.TelaInicialActivity" />
        </activity>
        <activity
            android:name=".BottonsRecyclerActivity"
            android:label="@string/title_activity_bottons"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.TelaInicialActivity" />
        </activity>
        <activity
            android:name=".CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.MainActivity" />
        </activity>
        <activity
            android:name=".TelaInicialActivity"
            android:label="@string/title_activity_tela_inicial"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.LoginActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.yourbottons.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>